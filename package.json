{
  "name": "automation-functional-cypress",
  "version": "1.0.0",
  "description": "Cypress automation testing framework with Cucumber BDD",
  "main": "index.js",
  "type": "commonjs",
  "cypress-cucumber-preprocessor": {
    "stepDefinitions": "cypress/e2e/scripts/**/*.{js,ts}"
  },
  "scripts": {
    "cypress:open": "cypress open",
    "test:headed": "cypress run --headed",
    "test:headless": "cypress run",
    "test:specific": "cypress run --spec 'cypress/e2e/**/*.feature'",
    "test:chrome": "cypress run --browser chrome",
    "test:firefox": "cypress run --browser firefox",
    "report:allure": "allure serve allure-results",
    "report:allure:generate": "allure generate allure-results --clean -o allure-report",
    "test:debug": "cypress run --headed --no-exit"
  },
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^23.2.1",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.7",
    "@cucumber/cucumber": "^12.2.0",
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.34.1",
    "cypress": "^15.7.0",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GyanaprakashKhandual/Automation-Functional-Cypress.git"
  },
  "keywords": [
    "cypress",
    "cucumber",
    "bdd",
    "testing",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/GyanaprakashKhandual/Automation-Functional-Cypress/issues"
  },
  "homepage": "https://github.com/GyanaprakashKhandual/Automation-Functional-Cypress#readme"
}
